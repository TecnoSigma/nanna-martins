<div class="card-body">
  <small><%= t('.required_field') %></small>
  <div class="row">
    <div class="col-md-5 pr-md-1">
      <div class="form-group">
        <label><%= t('.name') %></label>
        <%= form.text_field 'name', class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-md-5 px-md-1">
      <div class="form-group">
        <label><%= t('.document') %></label>
        <%= form.text_field 'document',
                         class: 'form-control',
                         required: true,
                         placeholder: t('.placeholders.document') %>
      </div>
    </div>
    <div class="col-md-2 pl-md-1">
      <div class="form-group">
        <label><%= t('.kind') %></label>
        <%= form.text_field 'kind', class: 'form-control', value: t('.default_kind'), required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 pr-md-1">
      <div class="form-group">
        <label><%= t('.contact') %></label>
        <%= form.text_field 'contact', class: 'form-control', required: true %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 pr-md-1">
      <div class="form-group">
        <label>
          <%= t('.telephone') %>
        </label>
        <%= form.text_field 'telephone',
                         class: 'form-control',
                         required: true,
                         placeholder: t('.placeholders.telephone') %>
      </div>
    </div>
    <div class="col-md-6 px-md-1">
      <div class="form-group">
        <label><%= t('.cellphone') %></label>
        <%= form.text_field 'cellphone',
                         class: 'form-control',
                         required: true,
                         placeholder: t('.placeholders.cellphone')%>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 pr-md-1">
      <div class="form-group">
        <label><%= t('.site') %></label>
        <%= form.text_field 'site', class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6 px-md-1">
      <div class="form-group">
        <label><%= t('.email') %></label>
        <%= form.text_field 'email', class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 pr-md-1">
      <div class="form-group">
        <label><%= t('.address') %></label>
        <%= form.text_field 'address', class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-md-2 px-md-1">
      <div class="form-group">
        <label><%= t('.number') %></label>
        <%= form.text_field 'number', class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-md-4 pl-md-1">
      <div class="form-group">
        <label><%= t('.complement') %></label>
        <%= form.text_field 'complement', class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 pr-md-1">
      <div class="form-group">
        <label><%= t('.district') %></label>
        <%= form.text_field 'district', class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-3 px-md-1">
      <div class="form-group">
        <label><%= t('.city') %></label>
        <%= form.text_field 'city', class: 'form-control', required: true %>
      </div>
    </div>
    <div class="col-md-3 px-md-1">
      <div class="form-group">
        <label><%= t('.state') %></label>
        <%= form.text_field 'state', class: 'form-control', value: t('.default_state'), required: true %>
      </div>
    </div>
    <div class="col-md-3 pl-md-1">
      <div class="form-group">
        <label><%= t('.postal_code') %></label>
        <%= form.text_field 'postal_code',
                         class: 'form-control',
                         required: true,
                         placeholder: t('.placeholders.postal_code')%>
      </div>
    </div>
  </div>
</div>
<div class="card-footer">
  <%= form.submit t('.save_data_btn'), class: 'btn btn-fill btn-primary' %>
</div>
