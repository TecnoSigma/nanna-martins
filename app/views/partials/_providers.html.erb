<div class="modal fade" id="<%= "modal_#{stock.id.to_s}" %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="custom-modal-content modal-content">
      <div class="modal-header">
        <h5 class="custom-modal-title" id="exampleModalLabel"><%= t('.providers_list', product: stock.name) %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul>
          <% stock.providers_list.each do |provider| %>
            <li>
              <%= link_to provider[:name], admin_panel_details_provider_path(provider[:id]) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
